{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["lib/*"]
    },
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["/node_modules/@types"],
    "types": ["node", "mocha"]
  },
  "include": ["lib/**/*", "./bin/**/*"],
  "exclude": ["node_modules", "git-images", "**/*.test.ts"]
}
